{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es6"],
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": true
    },
    "exclude": ["node_modules"],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    },
    "enableIvy": false
}
